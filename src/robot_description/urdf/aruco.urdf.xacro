<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Xacro Macro to Define an ArUco Plane -->
  <xacro:macro name="aruco_plane" params="plane_number parent_link position rotation">
    <!-- Define the plane link -->
    <link name="aruco_plane_${plane_number}">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.05 0.05 0.001"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.05 0.05 0.001"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.000001"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
                 iyy="0.0001" iyz="0.0" izz="0.0001"/>
      </inertial>
    </link>

    <!-- Define the fixed joint attaching the plane to the parent link -->
    <joint name="aruco_plane_joint_${plane_number}" type="fixed">
      <parent link="${parent_link}"/>
      <child link="aruco_plane_${plane_number}"/>
      <origin xyz="${position}" rpy="${rotation}"/>
    </joint>

    <!-- Assign custom material to the plane -->
    <gazebo reference="aruco_plane_${plane_number}">
      <material>id${plane_number}_Plane_Material</material>
      <disable_collision>true</disable_collision>
    </gazebo>
  </xacro:macro>

  <!-- Torso and waist markers for CLOVIS2Mini -->
  <!-- Waist yaw link -->
  <xacro:aruco_plane plane_number="0" parent_link="LinkR0_AxisRz_Waist_Yaw" position="0 0 0.08" rotation="0 0 0"/>
  <xacro:aruco_plane plane_number="1" parent_link="LinkR0_AxisRz_Waist_Yaw" position="0 0 -0.08" rotation="0 0 0"/>
  <xacro:aruco_plane plane_number="2" parent_link="LinkR0_AxisRz_Waist_Yaw" position="0.08 0 0" rotation="0 1.5708 0"/>
  <xacro:aruco_plane plane_number="3" parent_link="LinkR0_AxisRz_Waist_Yaw" position="-0.08 0 0" rotation="0 -1.5708 0"/>

  <!-- Waist roll link -->
  <xacro:aruco_plane plane_number="4" parent_link="Link1_AxisRx_Waist_Roll" position="0 0 0.06" rotation="0 0 0"/>
  <xacro:aruco_plane plane_number="5" parent_link="Link1_AxisRx_Waist_Roll" position="0 0 -0.06" rotation="0 0 0"/>
  <xacro:aruco_plane plane_number="6" parent_link="Link1_AxisRx_Waist_Roll" position="0.08 0 0" rotation="0 1.5708 0"/>
  <xacro:aruco_plane plane_number="7" parent_link="Link1_AxisRx_Waist_Roll" position="-0.08 0 0" rotation="0 -1.5708 0"/>

  <!-- Waist pitch link -->
  <xacro:aruco_plane plane_number="8" parent_link="Link2_AxisRy_Abs_Pitch" position="0 0 0.05" rotation="0 0 0"/>
  <xacro:aruco_plane plane_number="9" parent_link="Link2_AxisRy_Abs_Pitch" position="0 0 -0.05" rotation="0 0 0"/>
  <xacro:aruco_plane plane_number="10" parent_link="Link2_AxisRy_Abs_Pitch" position="0.07 0 0" rotation="0 1.5708 0"/>
  <xacro:aruco_plane plane_number="11" parent_link="Link2_AxisRy_Abs_Pitch" position="-0.07 0 0" rotation="0 -1.5708 0"/>

  <!-- Base link markers -->
  <xacro:aruco_plane plane_number="12" parent_link="base_link_R0_HipsWaist_Yaw" position="0 0.04 0.04" rotation="0 0 0"/>
  <xacro:aruco_plane plane_number="13" parent_link="base_link_R0_HipsWaist_Yaw" position="0 0.04 -0.04" rotation="0 0 0"/>
  <xacro:aruco_plane plane_number="14" parent_link="base_link_R0_HipsWaist_Yaw" position="0.042 0.04 0" rotation="0 1.5708 0"/>
  <xacro:aruco_plane plane_number="15" parent_link="base_link_R0_HipsWaist_Yaw" position="-0.042 0.04 0" rotation="0 -1.5708 0"/>

</robot>
